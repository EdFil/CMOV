<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textWorkspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workspace name"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/newWorkspaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New workspace"
        android:inputType="textPhonetic"/>

    <TextView
        android:id="@+id/textQuota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quota (MB)"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <EditText
        android:id="@+id/editQuota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="20" />

    <Switch
        android:id="@+id/privateSwitch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:showText="true"
        android:textOff="Private"
        android:textOn="Public" />

    <ViewSwitcher
        android:id="@+id/tagViewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workspace tags"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <pt.ulisboa.tecnico.cmov.airdesk.custom.PredicateLayout
                android:id="@+id/tagList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/newTag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="New tag"
                    android:maxLength="10"/>

                <Button
                    android:id="@+id/addTagButton"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_add" />

            </LinearLayout>

            </LinearLayout>

        </ViewSwitcher>

    <!-- The elements for this list are on "tag list adapter LAYOUT" -->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelWorkspaceDialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/createWorkspaceDialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Create" />


    </LinearLayout>

</LinearLayout>
