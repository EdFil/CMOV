<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AirDeskActivity$WorkspacesFragment">

    <TextView
        android:id="@+id/typeWS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workspaces"
        android:textSize="20dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        android:background="#8F0000"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workspacesList"
        android:layout_below="@+id/typeWS"

        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreignWorkspacesList"
        android:clickable="true"
        android:visibility="gone"
        />


</RelativeLayout>